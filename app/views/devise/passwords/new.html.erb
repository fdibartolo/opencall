<h2><%= t('devise.title.new_password.primary') %></h2><br>
<h4><%= t('devise.title.new_password.secondary') %></h4><br>

<div class="col-sm-7">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-horizontal" }) do |f| %>

    <div class="<%= validation_error_class? :email %>">
      <label for="input-email" class="col-sm-2 form-control-label"><%= t('devise.labels.email') %></label>
      <div class="col-sm-8">
        <%= f.email_field :email, autofocus: true, class: "form-control", id: "input-email", placeholder: "Email" %>
        <%= validation_error_details? :email %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-offset-2 col-sm-8">
        <button id="signin-button" type="submit" class="btn btn-primary">
          <%= t('devise.buttons.send') %>
        </button>
      </div>
    </div>
  <% end %>
</div>

<div class="col-sm-5 social-login-container">
  <%- if devise_mapping.omniauthable? %>
    <h5><%= t('devise.title.social_login') %></h5>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <% provider_icon = social_icon_for provider %>
      <div class="col-xs-12 text-xs-center">
        <%= link_to content_tag(:span, '', class: "btn-social #{provider_icon}"), user_omniauth_authorize_path(provider) %>
      </div>
    <% end -%>
  <% end -%>
</div>

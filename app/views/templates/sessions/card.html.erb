<div class="card card-animated">
  <div class="card-block">
    <h5 class="title">
      <a ng-href="#/sessions/show/{{session.id}}" helpable="<%= t('sessions.help.session_title') %>" data-index="{{$index}}">
      {{session.title}}
      </a>
    </h5>
    <p class="author">{{session.author}}</p>
    <p class="tags">
      <span ng-if="session.tags.length > 0" class="fa fa-tags text-muted"></span>
      <span ng-repeat="tag in session.tags track by $index" class="tag clickable" ng-click="search(tag)">
        {{tag}}
      </span>
    </p>
  </div>
  <% if current_user %>
    <div class="card-footer">
      <span ng-include="'templates/sessions/actions.html'"></span>
    </div>
  <% end %>
</div>

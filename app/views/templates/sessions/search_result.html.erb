<div ng-if="sessions.length == 0" class="no-search-results">
  <h4 ng-if="searchTerms != ''" class="text-muted text-xs-center">
    <%= t('sessions.labels.no_search_results').html_safe %>
    <br><br><span class="fa fa-frown-o"></span>
  </h4>
  <h4 ng-if="searchTerms == ''" class="text-muted text-xs-center">
    <%= t('sessions.labels.no_sessions').html_safe %>
  </h4>
</div>

<div ng-if="sessions.length > 0"><br>
  <div ng-repeat="session in sessions" class="session-summary" fade-animation="true">
    <h3>
      <a ng-href="#/sessions/show/{{session.id}}" helpable="<%= t('sessions.help.session_title') %>" data-index="{{$index}}">
        {{session.title}}
      </a>
      <span ng-include="'templates/sessions/actions.html'"></span>
    </h3>
    <div class="author">{{session.author}}</div>
    <div>
      <ul class="list-inline">
        <li ng-repeat="tag in session.tags track by $index" class="tag sm bg-primary clickable" 
          ng-click="search(tag)">{{tag}}</li>
      </ul>
    </div>
  </div>
  <button class="btn btn-primary btn-sm center-block" ng-if="sessions.length < total" ng-click="loadMore()" style="margin-top:20px;margin-bottom:100px;padding:5px 50px">
    <%= t('sessions.buttons.load_more') %>
  </button>
  <div ng-if="sessions.length >= total" style="margin-bottom:100px"></div>
  <div id="bottom-fade"></div>
</div>
